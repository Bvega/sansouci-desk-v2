# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf
*.phtml text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Scripts
*.sh text eol=lf

# Web files
*.css text eol=lf
*.js text eol=lf
*.html text eol=lf

# Environment files
.env* text eol=lf
