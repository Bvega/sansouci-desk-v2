# Sansouci-Desk Environment Configuration
# Copy this file to .env and configure for your environment

# Application Settings
APP_NAME="Sansouci Desk"
APP_ENV=development
APP_DEBUG=true
APP_KEY=
APP_URL=http://localhost
APP_TIMEZONE=America/Santo_Domingo

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=sansouci_desk
DB_USERNAME=root
DB_PASSWORD=

# Security Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# CSRF Protection
CSRF_TOKEN_LIFETIME=3600
CSRF_REGENERATE_ON_LOGIN=true

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# Rate Limiting
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW=900
RATE_LIMIT_ENABLED=true

# Email Configuration
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=soporte@sansouci.com.do
MAIL_FROM_NAME="Sansouci Desk"

# Company Information
COMPANY_NAME="Sansouci Puerto de Santo Domingo"
COMPANY_EMAIL=soporte@sansouci.com.do
COMPANY_LOGO=https://www.sansouci.com.do/wp-content/uploads/2020/06/logo-sansouci.png

# Logging Configuration
LOG_CHANNEL=daily
LOG_LEVEL=debug
LOG_DAYS=14

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=sansouci_desk

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY_ENABLED=true

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,txt,doc,docx

# Audit Logging
AUDIT_ENABLED=true
AUDIT_LOG_SENSITIVE_DATA=false
AUDIT_RETENTION_DAYS=90

# Development Settings (disable in production)
DEBUG_BAR_ENABLED=false
QUERY_LOG_ENABLED=false